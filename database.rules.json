{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null && auth.isAdmin == true",
    "people": {
      ".read": true
    },
    "comments": {
      "$person": {
        "$comment": {
          ".write": "!data.exists() && auth != null && auth.token.name == newData.child('author').val()"
        }
      }
    }
  }
}
