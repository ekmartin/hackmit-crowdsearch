{
  "rules": {
    ".read": "auth != null",
    ".write": "root.child('admins/' + auth.uid).val() == true",
    "people": {
      ".read": true
    },
    "comments": {
      "$person": {
        "$comment": {
          ".write": "!data.exists() && auth != null && auth.token.name == newData.child('author').val()"
        }
      }
    }
  }
}
